#!/usr/bin/env php
<?php

namespace Civi\SmartyUp;

require_once dirname(__DIR__) . '/vendor/autoload.php';

use Symfony\Component\Console\Application;

$application = new Application('smartyup', '1.x');
$application->add(new Command\ParseTagCommand());
$application->add(new Command\PrintAdviceCommand());
$application->add(new Command\PrintStanzasCommand());
$application->add(new Command\PrintTagsCommand());
$application->add(new Command\ScanExamplesCommand());
$application->run();