#!/usr/bin/env php
<?php

require_once dirname(__DIR__) . '/vendor/autoload.php';

$c = new \Civi\SmartyClassifier\Classifier();
$files = $argv;
array_shift($files);
foreach ($files as $file) {
  echo "## FILE: $file\n";
  $content = file_get_contents($file);

  echo "#################################\n";
  echo $content;
  echo "\n";

  echo "#################################\n";
  print_r($c->classify($content));
  echo "\n";
}